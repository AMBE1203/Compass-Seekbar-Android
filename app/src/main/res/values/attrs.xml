<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="GIFView">
        <attr name="src" format="reference" />
    </declare-styleable>

    <declare-styleable name="GPSImageViewTransport">
        <attr name="left" format="boolean" />
    </declare-styleable>
    <declare-styleable name="GPSImageView">
        <attr name="clickAble" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SolMonth">
        <attr name="year" format="integer" />
        <attr name="month" format="enum">
            <enum name="January" value="1" />
            <enum name="February" value="2" />
            <enum name="March" value="3" />
            <enum name="April" value="4" />
            <enum name="May" value="5" />
            <enum name="Jun" value="6" />
            <enum name="July" value="7" />
            <enum name="August" value="8" />
            <enum name="September" value="9" />
            <enum name="October" value="10" />
            <enum name="November" value="11" />
            <enum name="December" value="12" />
        </attr>
    </declare-styleable>

    <declare-styleable name="fab">
        <attr name="showFab" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SwagPoints">
        <attr name="points" format="integer" />
        <attr name="max" format="integer" />
        <attr name="min" format="integer"/>
        <attr name="step" format="integer"/>

        <attr name="indicatorIcon" format="reference" />

        <attr name="progressWidth" format="dimension" />
        <attr name="progressColor" format="color" />

        <attr name="arcWidth" format="dimension" />
        <attr name="arcColor" format="color" />

        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>

        <attr name="clockwise" format="boolean" />
        <attr name="enabled" format="boolean" />

    </declare-styleable>


    <declare-styleable name="WaveRecordView">
        <attr name="mode" format="enum">
            <enum name="RECORDING" value="1" />
            <enum name="PLAYBACK" value="2" />
        </attr>
        <attr name="waveformStrokeThickness" format="float" />
        <attr name="waveformColor" format="color" />
        <attr name="waveformFillColor" format="color" />
        <attr name="playbackIndicatorColor" format="color" />
        <attr name="timecodeColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="line_count" format="integer|reference"/>
        <attr name="line_width" format="dimension|reference"/>
        <attr name="progress_start_color" format="color|reference"/>
        <attr name="progress_end_color" format="color|reference"/>
        <attr name="progress_text_color" format="color|reference"/>
        <attr name="progress_text_size" format="dimension|reference"/>
        <attr name="progress_stroke_width" format="dimension|reference"/>
        <attr name="progress_background_color" format="color|reference"/>
        <attr name="progress_start_degree" format="integer|reference"/>
        <attr name="drawBackgroundOutsideProgress" format="boolean|reference"/>

        <attr name="style">
            <enum name="line" value="0"/>
            <enum name="solid" value="1"/>
            <enum name="solid_line" value="2"/>
        </attr>

        <attr name="progress_shader">
            <enum name="linear" value="0"/>
            <enum name="radial" value="1"/>
            <enum name="sweep" value="2"/>
        </attr>

        <attr name="progress_stroke_cap">
            <enum name="butt" value="0"/>
            <enum name="round" value="1"/>
            <enum name="square" value="2"/>
        </attr>

    </declare-styleable>
</resources>
